<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#779191"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Main_Layout1"
        android:layout_width="354dp"
        android:layout_height="481dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/main_textViewNumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Numero 1:"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/main_editTextNumberDecimal8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="10sp"
            android:paddingLeft="10sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/main_textViewNumber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Numero 2:"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/main_editTextNumberDecimal9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="10sp"
            android:paddingLeft="10sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/main_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:text="Resultado:"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_textView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5sp"
            android:paddingLeft="10sp"
            android:paddingTop="20sp"
            android:paddingEnd="0sp"
            android:paddingRight="10sp"
            android:paddingBottom="20sp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFDFD"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_btnSumar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:backgroundTint="#2196F3"
            android:onClick="Suma"
            android:text="Sumar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/main_btnRestar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:backgroundTint="#2196F3"
            android:onClick="Restar"
            android:text="Restar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/main_btnMultiplicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:backgroundTint="#2196F3"
            android:onClick="Multiplicar"
            android:text="Multiplicar"
            android:textSize="18sp" />

        <Button
            android:id="@+id/main_btnDividir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:backgroundTint="#2196F3"
            android:onClick="Dividir"
            android:text="Dividir"
            android:textSize="18sp"
            app:iconTint="#C61D1D" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_Layout1">

        <Button
            android:id="@+id/main_btn_clear"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2BA1FF"
            android:onClick="ClearValuesBtn"
            android:text="C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_btn_exit"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:backgroundTint="#DF1818"
            android:onClick="btnExit_onClick"
            android:text="EXIT"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>